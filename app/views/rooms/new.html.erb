<%= form_tag ({controller: :rooms, action: :create}) do %>
    <%= render 'shared/flash_message' %>
    <div class="field">
      <%= label :room, :name %>
      <%= text_field :room, :name %>
    </div>
    <div class="field">
      <%= label :room, :password %>
      <%= password_field :room, :password %>
    </div>
    <div class="field">
      <%= label :user, :name %>
      <%= text_field :user, :name %>
    </div>
    <div class="field">
      <%= label :user, :password %>
      <%= password_field :user, :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'login or create' %>
    </div>
<% end %>