<h1>Room Setting</h1>
<%= form_for @room, url: room_setting_path do |f| %>
    <div class="field">
      <%= f.check_box :allow_search %>検索を許可する
    </div>
    <div class="field">
      <%= f.label :room_name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :room_key %>
      <%= f.text_field :password %>
    </div>
    <div class="field">
      <%= f.submit %>
    </div>
<% end %>
<p><%= link_to "Cancel", room_path %></p>