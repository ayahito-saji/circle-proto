<h1><%= login_title %></h1>
<%= form_for :session, url: login_path do |f| %>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.submit "login" %>
    </div>
<% end %>
<p>
  If you do NOT have an account, please <%= link_to "Sign up", signup_path %> now!
</p>